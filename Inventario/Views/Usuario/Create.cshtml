@section Scripts {
    <script src="~/js/PasswordCommon.js"></script>
    <script src="~/js/PasswordEdit.js"></script>

    <script type="text/javascript">


        $(document).ready(function () {

        });

        function EditPass(object) {
            $("#modalEditPass").modal('show');            
        }

        function submitChangePassword() {
            var oldPassword = $('#etOldPassword').val();
            var newPassword = $('#etNewPassword').val();
            var confirmNewPassword = $('#etConfirmNewPassword').val();

            if (oldPassword != "" && newPassword != "" && confirmNewPassword != "") {
                if (newPassword == confirmNewPassword) {
                    var message = "";

                    $.ajax({
                        url: '/Account/ChangePassword/',
                        type: "POST",
                        dataType: "json",
                        data: JSON.stringify({ UserId: $("#Id").val(), CurrentPassword: oldPassword, NewPassword: newPassword, getMultiValues: false }),
                        contentType: "application/json; charset=utf-8",
                        async: true,
                        success: function (result) {
                            if (result.data.succeeded) {
                                $('#Estado').text("Su contraseña ha sido modificada con éxito");
                                $('#etOldPassword').val('');
                                $('#etNewPassword').val('');
                                $('#etConfirmNewPassword').val('');
                            }
                            else {
                                for (var i = 0; i < result.data.errors.length; i++) {
                                    if (result.data.errors[i].code == "PasswordMismatch") {
                                        MsgError("Contraseña actual es incorrecta");
                                        return;
                                    }
                                    message = message + result.data.errors[i].description + '.\n'
                                }
                                MsgError(message);
                            }
                        },
                        error: function (result) {

                        }
                    });
                }
                else {
                    MsgError("La nueva contraseña debe coincidir con la confirmación.");
                }
            }
            else {
                MsgError("Debe llenar todos los campos");
            }
        }


        function Cancel() {
            window.location.href = "/Usuario/Index";
        }
    </script>
}


