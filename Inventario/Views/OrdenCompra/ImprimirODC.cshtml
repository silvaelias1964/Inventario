                </div>
                <div class="row">

                    <div class="form-group">
                        <div class="table-responsive ">
                            @{
                                string totImporteFmt = "";
                                string totIvaFmt = "";
                                string totSubTotalFmt = "";
                                decimal totImporte;
                                decimal totIva;
                                decimal totSubTotal;
                                totImporte = 0;
                                totIva = 0;
                                totSubTotal = 0;

                            }
